nextflow_workflow {

    name "Test Subworkflow GENERATE_FAMILIES"
    script "../main.nf"
    workflow "GENERATE_FAMILIES"

    test("fasta - minimal") {

        when {
            workflow {
                """
                input[0] = Channel.of([
                    [ id: 'test_minimal' ], // meta map
                    file(params.pipelines_testdata_base_path + 'proteinfamilies/test_data/mgnifams_input_small.fa', checkIfExists: true)
                ])
                input[0] = Channel.of([
                    [ id: 'test_chunks' ], // meta map
                    file(params.pipelines_testdata_base_path + 'proteinfamilies/test_data/subworkflows/chunk_1.fasta', checkIfExists: true),
                    file(params.pipelines_testdata_base_path + 'proteinfamilies/test_data/subworkflows/chunk_2.fasta', checkIfExists: true)
                ])
                """
            }
        }

        then {
            def lines = path(workflow.out.clusters[0][1]).readLines()
            assertAll(
                { assert workflow.success},
                { assert snapshot(workflow.out).match() }
            )
        }
    }

}
